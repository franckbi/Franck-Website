{
  "name": "3d-portfolio-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:visual": "playwright test e2e/visual-regression.spec.ts",
    "test:accessibility": "playwright test e2e/accessibility-automation.spec.ts",
    "test:critical": "playwright test e2e/critical-user-journeys.spec.ts",
    "test:all": "npm run test:run && npm run test:e2e",
    "test:unit": "vitest run",
    "test:smoke": "playwright test e2e/critical-user-journeys.spec.ts --grep=\"smoke\"",
    "analyze": "node scripts/check-bundle-size.js",
    "analyze:bundle": "node scripts/check-bundle-size.js",
    "performance": "node scripts/performance-budget.js",
    "check:performance-budget": "node scripts/performance-budget.js",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --config=lighthouserc.js",
    "lighthouse:prod": "lhci autorun --config=lighthouserc.js --url=https://your-domain.com",
    "optimize:assets": "node scripts/optimize-assets.js",
    "generate:sitemap": "next build && node -e \"console.log('Sitemap generated during build')\"",
    "deploy": "./scripts/deploy.sh",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production",
    "rollback": "./scripts/deploy.sh rollback",
    "prepare": "husky"
  },
  "dependencies": {
    "@react-spring/core": "^10.0.1",
    "@react-spring/three": "^10.0.1",
    "@react-three/drei": "^9.114.3",
    "@react-three/fiber": "^8.17.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "next": "^14.2.32",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "resend": "^6.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.169.0",
    "three-stdlib": "^2.36.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.17.9",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.1",
    "@types/three": "^0.179.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.15",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.11",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
